{
    "root_name": "document_structure",
    "description_field": "content",
    "sections_field": "sections",
    "levels": {
        "h1": {
            "pattern": "^# (.+)",
            "title_field": "main_title",
            "description_field": "summary",
            "sections_field": "subsections"
        },
        "h2": {
            "pattern": "^## (.+)",
            "title_field": "section_title",
            "description_field": "section_content",
            "parent": "h1",
            "sections_field": "subsections"
        },
        "h3": {
            "pattern": "^### (.+)",
            "title_field": "subsection_title",
            "description_field": "subsection_content",
            "parent": "h2"
        },
        "list": {
            "pattern": "^- (.+)",
            "title_field": "list_item",
            "description_field": "details",
            "parent": "h2"
        }
    }
}